#include <windows.h>
#include "Resource.h"

IDI_CLOCK           ICON    "clock.ico"
IDI_SMALL           ICON    "small.ico"
IDR_NOTIFICATION    RCDATA  "..\\gamemus.wav"


// Включение иконок и других ресурсов остаётся без изменений

/////////////////////////////////////////////////////////////////////////////
//
// Диалог для настройки игрового времени
//
IDD_SET_TIME DIALOGEX 0, 0, 200, 100
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Настройка игрового времени"
FONT 8, "MS Shell Dlg"
BEGIN
LTEXT           "Введите игровое время (ЧЧ:ММ):", -1, 10, 10, 180, 20
EDITTEXT        IDC_EDIT_TIME, 10, 35, 180, 20, ES_AUTOHSCROLL
DEFPUSHBUTTON   "ОК", IDOK, 50, 70, 50, 14
PUSHBUTTON      "Отмена", IDCANCEL, 110, 70, 50, 14
END

/////////////////////////////////////////////////////////////////////////////
//
// Новый диалог «О программе» (пользовательское окно About)
// Окно фиксированного размера с иконкой слева (ваша иконка)
// и текстом, разбитым на строки согласно требованиям
//
IDD_CUSTOM_ABOUTBOX DIALOGEX 0, 0, 420, 300
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "О программе"
FONT 10, "MS Shell Dlg"
BEGIN
// Пользовательский элемент рисования для иконки приложения (будет отрисован программно)
CONTROL "", IDC_APPICON, "Button", BS_OWNERDRAW | WS_CHILD | WS_VISIBLE, 10, 10, 95, 95

// Статический объект справа от иконки – надпись "Игровые часы"
LTEXT "Игровые часы", IDC_GAMECLOCK, 90, 25, 290, 40, SS_LEFT

// Ниже – текст "Информация о продукте."
LTEXT "Информация о продукте.", -1, 5, 65, 100, 10, SS_LEFT

// Группа (рамка) для таблицы – заголовок оставлен пустым, чтобы нарисовать рамку
GROUPBOX " ", -1, 5, 70, 192, 33

// Таблица из двух колонок
// Левая колонка – выравнивание по правому краю
LTEXT "Продукт:\r\nВерсия:\r\nДата сборки:", -1, 20, 76, 70, 26, SS_RIGHT
// Правая колонка – выравнивание по левому краю
LTEXT "Игровые часы\r\n1.0\r\n11.03.2025", -1, 110, 76, 50, 26, SS_LEFT

// Внизу – информация о разработке
LTEXT "Разработано командой SkorTeam\r\nСпециально для сообщества Warriors - Stay out", -1, 5, 110, 200, 90, SS_LEFT
END

